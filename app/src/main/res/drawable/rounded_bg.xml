<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Background color -->
    <gradient
        android:startColor="#FFF5F5"
        android:centerColor="#FFF9F9"
        android:endColor="#FFFFFF"
        android:angle="90"/>

    <!-- Subtle shadow-like border -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Padding inside the shape -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

</shape>
