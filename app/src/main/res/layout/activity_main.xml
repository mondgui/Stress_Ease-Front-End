<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".MainActivity"
    android:background="@drawable/bg_chat_gradient">


    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="621dp"
        android:layout_height="520dp"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnQuiz"
            style="?attr/borderlessButtonStyle"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="Take Quiz"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/btnMood"
            style="?attr/borderlessButtonStyle"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="Log Mood"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnChat"
            style="?attr/borderlessButtonStyle"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="Chat"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/btnReports"
            style="?attr/borderlessButtonStyle"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="View Reports"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnJournal"
            style="?attr/borderlessButtonStyle"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="Journaling"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/btnSummary"
            style="?attr/borderlessButtonStyle"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="Summary"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnBreathing"
            style="?attr/borderlessButtonStyle"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="Breathing Game"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/btnLogout"
            style="?attr/borderlessButtonStyle"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="Logout"
            android:textColor="@android:color/white" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
