<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/scrollViewSOS"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- The key fix: height = match_parent + gravity center -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvCrisisTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crisis Support"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:layout_marginBottom="20dp" />

            <!-- Country label -->
            <TextView
                android:text="Your Country:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Country dropdown -->
            <Spinner
                android:id="@+id/spinnerCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_bg"
                android:minHeight="48dp"
                android:padding="8dp" />

            <!-- Warning text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="4dp"
                android:text="If you are in immediate danger, please call your local emergency number. The resources below are available for immediate, confidential support."
                android:textColor="@android:color/holo_red_light"
                android:textSize="14sp" />

            <!-- Contact list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSOSContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

